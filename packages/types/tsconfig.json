{
	"compilerOptions": {
		"composite": true,
		"outDir": "lib",
		"rootDir": "src",
		"lib": ["es2017"],
		"downlevelIteration": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": false,
		"strict": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2017",
		"sourceMap": true
	},
	"include": ["src"]
}
